@model OperacionRealizadaModel

@{
    ViewData["Title"] = "Registro de operaciones";
}

<h1>Registro de operaciones</h1>
<form method="post" class="form-floating">
    <div class="form-group">
        <label asp-for="OperacionRealizada"></label>
        <input class="form-control" asp-for="OperacionRealizada" />
        <span asp-validation-for="OperacionRealizada" class="text-danger"></span>
    </div>
    
    <br />
    <div ckass="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Registrar</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}