@{
    ViewData["Title"] = "Inicio Operacion Realizada";
}

<br />
<div class="text-center">
    <h1 class="display-4">Operaciones Realizadas</h1>
    <br />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id Operacion</th>
                    <th>Operacion</th>                    
                </tr>
            </thead>
            @{
                if (ViewBag.OperacionesRealizadas != null)
                {
                    foreach (var item in ViewBag.OperacionesRealizadas)
                    {
                        <tr>
                            <td>@item.IdOperacionRealizada</td>
                            <td>@item.OperacionRealizada</td>                            
                            <td>
                                <a asp-action="Editar" class="btn btn-warning" asp-route-id="@item.IdOperacionRealizada">Editar</a> |
                                <a asp-action="Detalles" class="btn btn-primary" asp-route-id="@item.IdOperacionRealizada">Detalles</a> |
                                <a asp-action="Eliminar" class="btn btn-danger" asp-route-id="@item.IdOperacionRealizada">Eliminar</a> |

                            </td>
                        </tr>
                    }
                }
            }
        </table>
    </div>

</div>