@model EstadoModel

@{
    ViewData["Title"] = "Eliminar Estados";
}

<h1>Eliminar</h1>

<div>
    <h4>¿Estas seguro de eliminar este Estado?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(EstadoModel => EstadoModel.NombreEstado)
        </dt>
    </dl>
</div>
<div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>