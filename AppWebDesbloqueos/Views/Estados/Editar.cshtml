@model EstadoModel

@{
    ViewData["Title"] = "Editar Estados";
}

<h1>Editar Estados</h1>
<hr />
<div class="row g-3 form-floating">
    <div class="col-md-6">
        <form asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-6 form-group">
                <label asp-for="NombreEstado" class="control-label">Nombre del Estado</label>
                <input asp-for="NombreEstado" class="form-control" />
                <span asp-validation-for="NombreEstado" class="text-danger"></span>
            </div>
            <br />
            <div class="col-md-6 form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" /> | 
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>