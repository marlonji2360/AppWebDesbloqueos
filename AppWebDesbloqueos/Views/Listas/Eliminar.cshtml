@model ListaModel

@{
    ViewData["Title"] = "Eliminar lista";
}

<h1>Eliminar</h1>

<div>
    <h4>¿Estas seguro de eliminar esta lista?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(ListaModel => ListaModel.NombreLista)
        </dt>
    </dl>
</div>
<div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="IdLista" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>