@model UsuarioModel

@{
    ViewData["Title"] = "Eliminar usuario";
}

<h1>Eliminar</h1>

<div>
    <h4>¿Estas seguro de eliminar este usuario?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(UsuarioModel => UsuarioModel.UsuarioSistema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(UsuarioModel => UsuarioModel.UsuarioSistema)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(UsuarioModel => UsuarioModel.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(UsuarioModel => UsuarioModel.Nombre)
        </dd>        
    </dl>
</div>
<div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>