@{
    ViewData["Title"] = "Inicio Observaciones";
}

<br />
<div class="text-center">
    <h1 class="display-4">Observaciones</h1>
    <br />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id Observacion</th>
                    <th>Observaciones</th>
                </tr>
            </thead>
            @{
                if (ViewBag.Observaciones != null)
                {
                    foreach (var item in ViewBag.Observaciones)
                    {
                        <tr>
                            <td>@item.IdObservacion</td>
                            <td>@item.ObservacionesDetalle</td>
                            <td>
                                <a asp-action="Editar" class="btn btn-warning" asp-route-id="@item.IdObservacion">Editar</a> |
                                <a asp-action="Detalles" class="btn btn-primary" asp-route-id="@item.IdObservacion">Detalles</a> |
                                <a asp-action="Eliminar" class="btn btn-danger" asp-route-id="@item.IdObservacion">Eliminar</a> |

                            </td>
                        </tr>
                    }
                }
            }
        </table>
    </div>

</div>