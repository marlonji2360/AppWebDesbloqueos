@{
    ViewData["Title"] = "Inicio Centros Negocios";
}

<br />
<div class="text-center">
    <h1 class="display-4">Centros Negocios</h1>
    <br />

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id Cn</th>
                    <th>Nombre Cn</th>
                </tr>
            </thead>
            @{
                if (ViewBag.CentrosNegocios != null)
                {
                    foreach (var item in ViewBag.CentrosNegocios)
                    {
                        <tr>
                            <td>@item.IdCn</td>
                            <td>@item.NombreCn</td>
                            <td>
                                <a asp-action="Editar" class="btn btn-warning" asp-route-id="@item.IdCn">Editar</a> |
                                <a asp-action="Detalles" class="btn btn-primary" asp-route-id="@item.IdCn">Detalles</a> |
                                <a asp-action="Eliminar" class="btn btn-danger" asp-route-id="@item.IdCn">Eliminar</a> |

                            </td>
                        </tr>
                    }
                }
            }
        </table>
    </div>

</div>